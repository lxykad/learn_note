<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/wanandroid_home_fragment_list_item_selector"
    android:padding="10dp">

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeItemHead"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@android:color/primary_text_light"
        android:textSize="19sp"
        tools:text="标题" />

    <TextView
        android:id="@+id/articleTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivLike"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/articleTitle"
        android:layout_toLeftOf="@+id/ivLike"
        android:gravity="center_vertical"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/sp_16"
        tools:text="time" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/articleTitle"
        android:padding="@dimen/dp_10"
        app:srcCompat="@drawable/wanandroid_ic_action_no_like"
        tools:ignore="ContentDescription" />
</RelativeLayout>